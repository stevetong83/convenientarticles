<!DOCTYPE html>
<html>
<head>
  <title><%=	 page_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%=	 render "layouts/navigation" %>
<div id="wrapper">
   <div id="content">
     <div id="adsense">
       <%=	 render "layouts/adsense" %>
     </div>
     <%	 if flash[:notice] %>
     <div id="success_message">
       <%=	 flash[:notice] %>
     </div>
         <%	 end %>
<%= yield %>
   </div>
</div>

    <div id="footer">
     <%=	 render "layouts/footer" %>
    </div>


</body>
</html>
